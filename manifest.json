{
  "manifest_version": 3,
  "name": "Website Content Analyzer",
  "version": "1.2",
  "description": "Analyze and summarize content from any webpage in Edge",
  "permissions": ["scripting", "activeTab", "sidePanel"],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui/sidepanel.css",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}